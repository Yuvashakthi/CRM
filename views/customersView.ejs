        <!-- Projects Dropdown -->
        <li>
          <a href="#" class="dropdown" onclick="toggleDropdown('projectDropdown')">Projects ‚ñæ</a>
          <ul id="projectDropdown" class="dropdown-menu">
            <li><a href="/projectView">Project View</a></li>
